{
  "name": "autobot",
  "version": "14.0.0",
  "description": "A simple Angular project for playing with cars... while learning Angular ;-)",
  "homepage": "https://academiabinaria.github.io/autobot/",
  "author": {
    "name": "Alberto Basalo",
    "email": "albertobasalo@agorabinaria.com",
    "url": "https://twitter.com/albertobasalo"
  },
  "scripts": {
    "start": "ng serve -o --port 4203",
    "start:es": "ng serve --configuration=es -o --port 4204",
    "build": "ng build --configuration=prod",
    "build:es": "ng build --configuration=prod-es",
    "build:auth-blocks": "ng build auth-blocks",
    "serve": "npm run build && http-server ./dist/autobot -o -c-1",
    "serve:es": "npm run build:es && http-server ./dist/autobot-es -o -c-1",
    "pub": "ng build --configuration=pub && git add * && git commit -m 'pub' && git push",
    "pub:es": "ng build --configuration=pub-es && git add * && git commit -m 'pub-es' && git push",
    "pack:auth-blocks": "npm run build:auth-blocks && cd dist/auth-blocks && npm pack",
    "ng": "ng",
    "xi18n": "ng xi18n --output-path locale",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.1.0",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/forms": "^7.1.0",
    "@angular/http": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/pwa": "^0.9.0-rc.2",
    "@angular/router": "^7.1.0",
    "@angular/service-worker": "^7.1.0",
    "@ngrx/effects": "^6.1.0",
    "@ngrx/router-store": "^6.1.0",
    "@ngrx/store": "^6.1.0",
    "@ngrx/store-devtools": "^6.1.0",
    "auth-blocks": "file:dist/auth-blocks/auth-blocks-0.0.4.tgz",
    "bulma": "^0.7.1",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "moment": "^2.22.2",
    "rxjs": "^6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.9.0-rc.3",
    "@angular-devkit/build-ng-packagr": "~0.9.0-rc.1",
    "@angular/cli": "^7.0.6",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@ngrx/schematics": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.2.0",
    "protractor": "^5.4.1",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "typescript": "~3.1.6",
    "webpack-bundle-analyzer": "^3.0.2"
  }
}
